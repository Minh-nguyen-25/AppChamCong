<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch làm việc trong tháng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <!-- Lịch -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Chi tiết ngày -->
    <LinearLayout
        android:id="@+id/layoutWorkDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/day_background"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in: "/>

        <TextView
            android:id="@+id/tvCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out: "/>

        <TextView
            android:id="@+id/tvShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca làm: "/>

        <TextView
            android:id="@+id/tvTotalHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số giờ làm: "/>

        <TextView
            android:id="@+id/tvOvertimeHoursDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ tăng ca: "/>
    </LinearLayout>
</LinearLayout>
